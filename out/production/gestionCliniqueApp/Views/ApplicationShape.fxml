                                <HBox alignment="CENTER" prefHeight="60.0" spacing="20.0">
                                    <children>
                                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../Images/silhouette-dutilisateurs-multiples.png" />
