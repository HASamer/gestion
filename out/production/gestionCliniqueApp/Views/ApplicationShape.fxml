                                        </ImageView>
                                        <Label text="Paramètres" textFill="#0d0707" styleClass="shadow" stylesheets="@../Styles/Styles.css">
                                            <font>
                                                <Font name="Berlin Sans FB Demi Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
